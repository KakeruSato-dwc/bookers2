<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h1>User info</h1>
      <% if @user.errors.any? %>
        <div class="error-message">
          <% if @user.errors.count == 1 %>
            <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
          <% else %>
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <% end %>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
        <label for="inputName">Name</label>
        <%= f.text_field :name, class: "w-100" %>
        <label for="inputImage" class="mt-3">Image</label></br>
        <%= f.file_field :profile_image, accept: "image/*" %></br>
        <label for="inputIntroduction" class="mt-3">Introduction</label>
        <%= f.text_area :introduction, class: "w-100" %>
        <%= f.submit "Update User", class: "btn btn-secondary btn-block w-25 mt-3" %>
      <% end %>
    </div>
  </div>
</div>
