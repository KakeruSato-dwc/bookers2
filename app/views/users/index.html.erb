<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render "books/left", user: @user %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th>
                <%= image_tag user.get_profile_image(100, 100) %>
              </th>
              <th>
                <%= user.name %>
              </th>
              <th>
                <a href="/users/<%= user.id %>">Show</a>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>