<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <div class="error-message">
          <% if @book.errors.count == 1 %>
            <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
          <% else %>
            <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
          <% end %>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <label for="inputTitle">Title</label>
        <%= f.text_field :title, class: "w-100" %>
        <label for="inputOpinion" class="mt-3">Opinion</label>
        <%= f.text_area :body, class: "w-100" %>
        <%= f.submit "Update Book", class: "btn btn-success btn-block w-25 mt-3" %>
      <% end %>
      <p class="mt-4">
        <a href="/books/<%= @book.id %>">Show</a> | <a href="/books">Back</a>
      </p>
    </div>
  </div>
</div>