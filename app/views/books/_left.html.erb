<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th class="w-75"><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th class="w-75"><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <a class="btn btn-outline-secondary btn-block w-75" href="/users/<%= user.id %>/edit">
      <i class="fa-solid fa-user-cog"></i>
    </a>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: Book.new, url: "/books", method: :post do |f| %>
    <label for="inputTitle">Title</label></br>
    <%= f.text_field :title %></br>
    <label for="inputOpinion" class="mt-3">Opinion</label></br>
    <%= f.text_area :body %>
    <%= f.submit "Create Book", class: "btn btn-success btn-block w-50 mt-3" %>
  <% end %>
</div>