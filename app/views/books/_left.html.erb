<div class-"col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100, 100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <% if user.id == current_user.id %>
      <a class="btn btn-outline-secondary btn-block" href="/users/<%= user.id %>/edit">
        <i class="fa-solid fa-user-gear"></i>
      </a>
    <% else %>
      <a class="btn btn-outline-secondary btn-block" href="/users/<%= current_user.id %>">
        <i class="fa-solid fa-user-gear"></i>
      </a>
    <% end %>
  </div>
  <h2 class="mt-3">New book</h2>
  <%= form_with model: Book.new, url: "/books", method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p class="mt-3">Opinion</p>
    <%= f.text_area :body %>
    <!-- <a type="submit" class="btn btn-success btn-block mt-3" style="width: 150px;" data-method="post" href="/books">Create Book</a> -->
    <%= f.submit "Create Book", class: "btn btn-success btn-block w-50 mt-3" %>
  <% end %>
</div>