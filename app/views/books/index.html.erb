<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render "left", user: @user %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <th>
                <a href="/users/<%= book.user_id %>"><%= image_tag book.user.get_profile_image(100, 100) %></a>
              </th>
              <th>
                <a href="/books/<%= book.id %>"><%= book.title %></a>
              </th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
